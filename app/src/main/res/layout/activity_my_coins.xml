<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MyCoinsActivity">


    <TextView
        android:id="@+id/mycoinstv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:text="No Data Present"
        android:textAlignment="center">

    </TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Space>


    <Button
        android:id="@+id/fetchcoins"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Fecth Coins"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_grad_purple">

    </Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="TAKE MOCK TESTS TO GET COINS">


    </TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Space>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/ad_container_my_coins">
    </RelativeLayout>



</LinearLayout>