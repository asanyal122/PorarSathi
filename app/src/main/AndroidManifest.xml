            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChapterListActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden"></activity>
        <activity
            android:name=".MyProfileActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".MyProgressActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".ChapterOptionActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity android:name=".RatingActivity" />

        <service android:name=".PorarSathiMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>