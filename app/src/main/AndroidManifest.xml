            android:name=".MyWebActivityForResults"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".ResultsListingActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".StorageListingActivity"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
        <activity
            android:name=".MyWebActivityForQuestionAnswer"
            android:configChanges="screenLayout|screenSize|orientation|keyboard|uiMode|smallestScreenSize|keyboardHidden" />
